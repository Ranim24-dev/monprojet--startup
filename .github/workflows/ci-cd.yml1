name: ğŸš€ CI/CD sÃ©curisÃ©

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

permissions:
  contents: read
  id-token: write

jobs:
  # Ã‰tape 1ï¸âƒ£ : Build & Test
  build_and_test:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ” RÃ©cupÃ©ration du code
        uses: actions/checkout@v3

      - name: ğŸ§© Installation de Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: ğŸ“¦ Installation des dÃ©pendances
        run: npm install

      - name: ğŸ§ª ExÃ©cution des tests unitaires
        run: npm test

  # Ã‰tape 2ï¸âƒ£ : Analyse de sÃ©curitÃ©
  security_scan:
    runs-on: ubuntu-latest
    needs: build_and_test

    steps:
      - name: ğŸ” Checkout du code
        uses: actions/checkout@v3

      - name: ğŸ›¡ï¸ Analyse Snyk
        uses: snyk/actions/node@master
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
        continue-on-error: true

      - name: ğŸ” Scan des dÃ©pendances npm
        run: npm audit --audit-level=moderate || true

  # Ã‰tape 3ï¸âƒ£ : Build Docker
  docker_build:
    runs-on: ubuntu-latest
    needs: security_scan

    steps:
      - name: ğŸ” Checkout du code
        uses: actions/checkout@v3

      - name: ğŸ³ Construction de l'image Docker
        run: docker build -t monapp:latest .

  # Ã‰tape 4ï¸âƒ£ : DÃ©ploiement
  deploy:
    runs-on: ubuntu-latest
    needs: docker_build

    steps:
      - name: ğŸš€ DÃ©ploiement via SSH
        uses: appleboy/ssh-action@v0.1.10
        with:
          host: ${{ secrets.SERVER_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_KEY }}
          script: |
            cd /var/www/monapp
            git pull
            npm install --production
            pm2 restart monapp
